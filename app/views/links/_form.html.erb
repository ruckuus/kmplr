<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :title %> :
      <%= f.text_field :title, :required => true, :placeholder => "Link title", :class => "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :url %> :
      <%= f.text_field :url, :required => true, :placeholder => "The URL you want to submit", :class => "form-control" %>
  </div>
  <div class="actions form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Cancel', links_path, class:"btn btn-danger" %>
  </div>
<% end %>
