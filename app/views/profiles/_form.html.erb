<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :placeholder => "Your name", :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label :bio %><br>
    <%= f.text_area :bio, :placeholder => "Your short bio description", :class => "form-control" %>
  </div>
  <div class="input-group">
    <%= f.label :contact %><br>
    <%= f.text_field :contact, :placeholder => "Your preferred contact", :class => "form-control" %>
  </div>
  <div class="actions form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Cancel', :back, class:"btn btn-danger" %>
  </div>
<% end %>
